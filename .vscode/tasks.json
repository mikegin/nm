{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build nm",
            "type": "shell",
            "command": "clang++",
            // "args": ["-g", "${workspaceFolder}/main.cpp", "-o", "${workspaceFolder}/nm", "-DDEBUG"],
            "args": ["-g", "${workspaceFolder}/main.cpp", "-o", "${workspaceFolder}/nm", "-I/usr/local/include", "-L/usr/local/lib", "-lraylib", "-lGL", "-lm", "-lpthread", "-ldl", "-lrt", "-lX11", "-DGUI", "-DDEBUG"], // gui version
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiler task."
        }
    ]
}
